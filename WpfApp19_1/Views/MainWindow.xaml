<Window x:Class="WpfApp19_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp19_1"
        xmlns:vm="clr-namespace:WpfApp19_1.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowsViewModel/>
    </Window.DataContext> 
    <StackPanel>
        <Label Content="Введите радиус"/>
        <TextBox Text="{Binding Path=Number1}"/>
        <Button Content="Рассчитать" Command="{Binding Path=AddCommand}"/>
        <TextBox Text="{Binding Path=Number3}"/>
    </StackPanel>
</Window>
